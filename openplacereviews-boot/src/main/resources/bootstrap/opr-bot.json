[
  {
    "type": "sys.operation",
    "create": [
      {
        "id": ["sys.bot"],
        "arity": 0,
        "fields" : {
          "overpassURL":"url for getting places",
          "timestampURL":"url for getting timestamp",
          "osmOpType":"types operations which bot will be create",
          "user":"user which will be create blocks",
          "rules":"rules that the bot will be use",
          "API": "java-package.ClassName;",
          "places_per_operation":"",
          "operations_per_block":"",
          "mappings":"",
          "sync-states": [
            {
              "date": "sync date",
              "tags": {
                "tagName" : "bbox"
              }
            }
          ]
        }
      }
    ]
  },
  {
    "type" : "sys.bot",
    "create" : [{
      "id" : ["osm-sync"],
      "url" : {
        "overpass_timestamp" : "http://builder.osmand.net:8083/api/timestamp",
        "overpass": "http://builder.osmand.net:8083/api/interpreter"
      },
      "bot": {
        "API" : "org.openplacereviews.osm.service.PublishBot",
        "threads": 4,
        "opr": {
          "places_per_operation": 250,
          "operations_per_block": 16,
          "type": "opr.place"
        }
      },
      "mapping": {
        "lat":"source.osm[0].lat",
        "lon":"source.osm[0].lon",
        "tags":"source.osm[0].tags"
      },
      "rules": {
        "match_id" : "set:all(opr:place_loc(.lat, .lon), str:first_non_empty(.tags.amenity, .tags.leisure), opr:simple_name(.tags.name))"
      },
      "sync-states" : [
        {
          "date":"",
          "tags": {
            "node[\"amenity\"~\"cafe|bar|restaurant|biergarten|fast_food|food_court|ice_cream|pub\"]": "",
            "node[\"tourism\"~\"hotel|motel|hostel|apartment|guest_house\"]": ""
          }
        }]
    }]
  }
